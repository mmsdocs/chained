extends layout

block content
  nav
    .nav-wrapper
      form
        .input-field
          input#searchBar.form-control(
            type="search",
            placeholder=searchLabel name=searchEndpoint
            required)
          label.label-icon(for="search")
            i.material-icons search
          i.material-icons close

  .links-container
    .blue-text.text-darken-2
      each result in results ? results : ['There are no results']
        .row
          .col.s12
            .card.blue-grey.darken-1
              .card-content.white-text
                span.card-title
                  p=result.title
                span=result.tags
              .card-action
                a(href=result.link, target="_blank")
                  span link
